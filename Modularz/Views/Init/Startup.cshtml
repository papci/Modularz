@{
    ViewBag.Title = "Installation";
    Layout = "";
}

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="bg-white">
<div class="container  container-sm">
    <h1 class="text-center">Welcome to Modularz</h1>
    <p class="text-center mb-5">
        <em > start installation with an admin account</em>
    </p>
    <form asp-route="StartInit" class="" method="POST">
        <div class="grid grid-cols-2 gap-2 mb-2">
            <label for="userName"> User Name : </label>
            <input type="text" placeholder="User Name" name="userName"/>
        </div>
        <div class="grid grid-cols-2 gap-2 mb-2">
            <label for="email"> Email : </label>
            <input type="email" placeholder="Email" name="email"/>
        </div>
        <div class="grid grid-cols-2 gap-2 mb-2">
            <label for="password"> Password : </label>
            <input type="password" placeholder="Password" name="password"/>
        </div>
        <div class="text-center">
            <button type="submit" class="border-solid border-2 border-light-blue-500">Let's gong</button>
        </div>
    </form>
</div>
</body>
</html>